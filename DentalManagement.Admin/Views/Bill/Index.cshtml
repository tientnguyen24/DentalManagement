@{
    ViewData["Title"] = "Danh sách dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{

    <script src="~/assets/js/bill.js"></script>
    <script>
        var billController = new BillController();
        billController.initialize();
    </script>
}

<div class="page-wrapper">
    <div class="content">
        <div class="profile-tabs">
            <ul class="nav nav-tabs nav-tabs-bottom">
                <li class="nav-item"><a class="nav-link active" href="#create-medical-invoice-tab" data-toggle="tab">Tạo phiếu khám bệnh</a></li>
                <li class="nav-item"><a class="nav-link" href="#payment-medical-invoice-tab" data-toggle="tab">Tạo phiếu thanh toán</a></li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane show active" id="create-medical-invoice-tab">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card-box">
                                <div class="card-title">
                                    <h4 class="text-center">Tạo phiếu khám bệnh</h4>
                                </div>
                                <div class="card-body">
                                    <div class="form-group row">
                                        <select id="dropListCustomer" class="form-control">
                                        </select>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table table-striped custom-table">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th>
                                                        STT
                                                    </th>
                                                    <th>
                                                        Loại dịch vụ
                                                    </th>
                                                    <th>
                                                        Tên dịch vụ
                                                    </th>
                                                    <th>
                                                        Đơn giá (vnd)
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody id="product_bill_body">
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="payment-medical-invoice-tab">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card-box">
                                <div class="card-body">
                                    <div class="medical-box">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>