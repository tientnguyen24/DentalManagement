@{
    ViewData["Title"] = "Danh sách dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{

    <script src="~/assets/js/bill.js"></script>
    <script>
        var billController = new BillController();
        billController.initialize();
    </script>
}

<div class="container-fluid">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Invoice">Hoá đơn</a></li>
        <li class="breadcrumb-item active">Tạo hoá đơn thanh toán</li>
    </ol>
    <h1 class="h3 mb-2 text-gray-800">Hoá đơn thanh toán</h1>
    <hr />
    <div class="col-md-12 mx-0">
        <span class="text-danger">@TempData["errorMsg"]</span>
        <span class="text-success">@TempData["successMsg"]</span>
        <div class="user" id="msform">
            <!-- progressbar -->
            <ul id="progressbar">
                <li class="active" id="product"><strong>Chọn dịch vụ</strong></li>
                <li id="payment"><strong>Thanh toán</strong></li>
                <li id="confirm"><strong>Hoàn thành</strong></li>
            </ul>
            <!-- fieldsets -->
            <fieldset>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card shadow mb-4">
                            <h1 class="h4 text-gray-900 mb-4">Chọn dịch vụ</h1>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-sm" width="100%" cellspacing="0" id="tbl_product_bill">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th></th>
                                                <th>
                                                    STT
                                                </th>
                                                <th>
                                                    Loại dịch vụ
                                                </th>
                                                <th>
                                                    Tên dịch vụ
                                                </th>
                                                <th>
                                                    Đơn giá
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody id="product_bill_body">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="button" name="next" class="next btn btn-primary" value="Tiếp tục" />
            </fieldset>
            <fieldset>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card shadow mb-4">
                            <h1 class="h4 text-gray-900 mb-4">Thông tin khách hàng</h1>
                            <div class="card-body">
                                <div class="form-group row">
                                    <select id="dropListCustomer" class="form-control">
                                    </select>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-sm" width="100%" cellspacing="0" id="tbl_customer_bill">
                                        <tbody id="customer_bill_body">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card shadow mb-4">
                            <h1 class="h4 text-gray-900 mb-4">Thông tin hoá đơn</h1>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-sm" width="100%" cellspacing="0" id="tbl_bill">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th></th>
                                                <th>
                                                    STT
                                                </th>
                                                <th>
                                                    Tên dịch vụ
                                                </th>
                                                <th>
                                                    Đơn giá
                                                </th>
                                                <th>
                                                    Số lượng
                                                </th>
                                                <th>
                                                    Thành tiền
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody id="bill_body">
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="5" class="text-right">Tạm tính: </td>
                                                <td><span id="lbl_temp_total"></span></td>
                                            </tr>
                                            <tr>
                                                <td colspan="5" class="text-right">Giảm giá: </td>
                                                <td><input type="text" class="text-center inp_total_discount_amount" id="inp_total_discount_amount"/></td>
                                            </tr>
                                            <tr>
                                                <td colspan="5" class="text-right text-danger">Thành tiền (<span id="lbl_no_of_items"></span>): </td>
                                                <td><span id="lbl_total"></span></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="button" name="previous" class="previous btn btn-outline-dark" value="Quay lại" />
                <a asp-controller="Bill" asp-action="Payment">
                    <input type="button" name="make_payment" class="next btn btn-primary" value="Tiếp tục" />
                </a>
            </fieldset>
        </div>
    </div>
</div>