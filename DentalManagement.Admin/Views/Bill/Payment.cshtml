@model BillViewModel

@if (Model != null)
{
<div class="container-fluid">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Invoice">Hoá đơn</a></li>
        <li class="breadcrumb-item active">Tạo hoá đơn thanh toán</li>
    </ol>
    <h1 class="h3 mb-2 text-gray-800">Hoá đơn thanh toán</h1>
    <hr />
    <div class="col-md-12 mx-0">
        <span class="text-danger">@TempData["errorMsg"]</span>
        <div class="user" id="msform">
            <ul id="progressbar">
                <li class="active" id="product"><strong>Chọn dịch vụ</strong></li>
                <li class="active" id="payment"><strong>Thanh toán</strong></li>
                <li class="active" id="confirm"><strong>Hoàn thành</strong></li>
            </ul>
            <fieldset>
                <form class="user" asp-action="Payment" asp-controller="Bill" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card shadow mb-4">
                                <h1 class="h4 text-gray-900 mb-4">Thông tin khách hàng</h1>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table-sm text-left" width="100%" cellspacing="0">
                                            <tbody>
                                                <tr><td class="text-right">Mã khách hàng: </td><td class="text-left">@Model.CustomerViewModel.CustomerId</td></tr>
                                                <tr><td class="text-right">Họ và tên: </td><td class="text-left">@Model.CustomerViewModel.FullName</td></tr>
                                                <tr><td class="text-right">Giới tính: </td><td class="text-left">@Model.CustomerViewModel.Gender</td></tr>
                                                <tr><td class="text-right">Ngày sinh: </td><td class="text-left">@Model.CustomerViewModel.BirthDay</td></tr>
                                                <tr><td class="text-right">Địa chỉ: </td><td class="text-left">@Model.CustomerViewModel.Address</td></tr>
                                                <tr><td class="text-right">Số CMND/CCCD: </td><td class="text-left">@Model.CustomerViewModel.IdentifyCard</td></tr>
                                                <tr><td class="text-right">Số điện thoại: </td><td class="text-left">@Model.CustomerViewModel.PhoneNumber</td></tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="card shadow mb-4">
                                <h1 class="h4 text-gray-900 mb-4">Thông tin hoá đơn</h1>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-sm" width="100%" cellspacing="0">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th>
                                                        STT
                                                    </th>
                                                    <th>
                                                        Tên dịch vụ
                                                    </th>
                                                    <th>
                                                        Đơn giá (VNĐ)
                                                    </th>
                                                    <th>
                                                        Số lượng
                                                    </th>
                                                    <th>
                                                        Thành tiền (VNĐ)
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{ int index = 1;}
                                                @foreach (var item in Model.BillItemViewModels)
                                                {
                                                    decimal itemAmount = item.Quantity * item.UnitPrice;
                                                    <tr>
                                                        <td>@(index++)</td>
                                                        <td class="text-left">@item.ProductName</td>
                                                        <td>@item.UnitPrice.ToString("N0")</td>
                                                        <td>@item.Quantity.ToString("N0")</td>
                                                        <td>@itemAmount.ToString("N0")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td colspan="4" class="text-right">Tạm tính: </td>
                                                    <td>@Model.BillItemViewModels.Sum(x => x.Quantity * x.UnitPrice).ToString("N0")</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4" class="text-right">Giảm giá: </td>
                                                    <td>--:--</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4" class="text-right text-danger">Thành tiền (@Model.BillItemViewModels.Count()): </td>
                                                    <td>@Model.BillItemViewModels.Sum(x => x.Quantity * x.UnitPrice).ToString("N0")</td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a asp-controller="Bill" asp-action="Index">
                        <input type="button" name="previous" class="previous btn btn-outline-dark" value="Quay lại" />
                    </a>
                    <button type="submit" class="next btn btn-success">Hoàn tất</button>
                </form>
            </fieldset>
        </div>
    </div>
</div>
}