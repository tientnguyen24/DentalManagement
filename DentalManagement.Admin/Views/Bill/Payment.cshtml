@model BillViewModel

@if (Model != null)
{
    <div class="container-fluid">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Invoice">Hoá đơn</a></li>
            <li class="breadcrumb-item active">Tạo hoá đơn thanh toán</li>
        </ol>
        <h1 class="h3 mb-2 text-gray-800">Hoá đơn thanh toán</h1>

        <hr />
        <div class="col-md-12 mx-0">
            <div class="user" id="msform">
                <ul id="progressbar">
                    <li id="product"><strong>Chọn dịch vụ</strong></li>
                    <li id="payment"><strong>Thanh toán</strong></li>
                    <li class="active" id="confirm"><strong>Hoàn thành</strong></li>
                </ul>
                <fieldset>
                    <form class="user" asp-action="Payment" asp-controller="Bill" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card shadow mb-4">
                                    <h1 class="h4 text-gray-900 mb-4">Thông tin khách hàng</h1>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table-sm text-left" width="100%" cellspacing="0">
                                                <tbody>
                                                    <tr><td>Mã khách hàng: </td><td>@Model.CustomerViewModel.CustomerId</td></tr>
                                                    <tr><td>Họ và tên: </td><td>@Model.CustomerViewModel.FullName</td></tr>
                                                    <tr><td>Giới tính: </td><td>@Model.CustomerViewModel.Gender</td></tr>
                                                    <tr><td>Ngày sinh: </td><td>@Model.CustomerViewModel.BirthDay</td></tr>
                                                    <tr><td>Địa chỉ: </td><td>@Model.CustomerViewModel.Address</td></tr>
                                                    <tr><td>Số CMND/CCCD: </td><td>@Model.CustomerViewModel.IdentifyCard</td></tr>
                                                    <tr><td>Số điện thoại: </td><td>@Model.CustomerViewModel.PhoneNumber</td></tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="card shadow mb-4">
                                    <h1 class="h4 text-gray-900 mb-4">Thông tin hoá đơn</h1>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-sm" width="100%" cellspacing="0">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th>
                                                            STT
                                                        </th>
                                                        <th>
                                                            Tên dịch vụ
                                                        </th>
                                                        <th>
                                                            Đơn giá
                                                        </th>
                                                        <th>
                                                            Số lượng
                                                        </th>
                                                        <th>
                                                            Thành tiền
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.BillItemViewModels)
                                                    {
                                                        decimal itemAmount = item.Quantity * item.UnitPrice;
                                                        <tr>
                                                            <td>1</td>
                                                            <td>@item.ProductName</td>
                                                            <td>@item.UnitPrice</td>
                                                            <td>@item.Quantity</td>
                                                            <td>@itemAmount</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <td colspan="4" class="text-right">Tạm tính: </td>
                                                        <td>@Model.BillItemViewModels.Sum(x => x.Quantity * x.UnitPrice).ToString("N0")</td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="4" class="text-right">Giảm giá: </td>
                                                        <td>--:--</td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="4" class="text-right text-danger">Thành tiền (<span id="lbl_no_of_items"></span>): </td>
                                                        <td>@Model.BillItemViewModels.Sum(x => x.Quantity * x.UnitPrice).ToString("N0")</td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="next action-button">Hoàn tất</button>
                    </form>
                </fieldset>
            </div>
        </div>
    </div>
}