@model BillViewModel

@if (Model != null)
{
<div class="container-fluid">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Invoice">Hoá đơn</a></li>
        <li class="breadcrumb-item active">Tạo hồ sơ</li>
    </ol>
    <h1 class="h3 mb-2 text-gray-800">HỒ SƠ ĐIỀU TRỊ</h1>
    <hr />
    <div class="col-md-12 mx-0">
        <span class="text-danger">@TempData["errorMsg"]</span>
        <div class="user" id="msform">
            <ul id="progressbar">
                <li class="active" id="product"><strong>Chọn dịch vụ</strong></li>
                <li class="active" id="payment"><strong>Thanh toán</strong></li>
                <li class="active" id="confirm"><strong>Hoàn thành</strong></li>
            </ul>
            <fieldset>
                <form class="user" asp-action="Payment" asp-controller="Bill" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card shadow mb-4">
                                <div class="card-title">
                                    <h4 class="align-middle mb-4">Thông tin khách hàng</h4>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-sm" width="100%" cellspacing="0">
                                            <tbody>
                                                <tr><td>Họ và tên: @Model.CustomerViewModel.FullName</td></tr>
                                                @{ 
                                                    var gender = Model.CustomerViewModel.Gender;
                                                    var genderStr = "";
                                                    if (gender == 0)
                                                    {
                                                        genderStr = "Nam";
                                                    }
                                                    else if (gender == 1)
                                                    {
                                                        genderStr = "Nữ";
                                                    }
                                                    else
                                                    {
                                                        genderStr = "Khác";
                                                    }
                                                }
                                                <tr><td>Giới tính: @genderStr</td></tr>
                                                <tr><td>Ngày sinh: @Model.CustomerViewModel.BirthDay</td></tr>
                                                <tr><td>Địa chỉ: @Model.CustomerViewModel.Address</td></tr>
                                                <tr><td>Số điện thoại: @Model.CustomerViewModel.PhoneNumber</td></tr>
                                                <tr><td>Tiền sử bệnh: @Model.CustomerViewModel.Description</td></tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="card shadow mb-4">
                                <div class="card-title">
                                    <h4 class="align-middle mb-4">Thông tin hoá đơn</h4>
                                    <div class="row">
                                        <div class="col-md-4 offset-md-8">
                                            <label class="control-label">Ngày tạo: @Model.BillSummaryViewModel.CreatedDate</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-sm" width="100%" cellspacing="0">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th class="col-md-1">
                                                        STT
                                                    </th>
                                                    <th class="col-md-5">
                                                        Tên dịch vụ
                                                    </th>
                                                    <th class="col-md-2">
                                                        Đơn giá
                                                    </th>
                                                    <th class="col-md-2">
                                                        Số lượng
                                                    </th>
                                                    <th class="col-md-2">
                                                        Thành tiền
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{ int index = 1;}
                                                @foreach (var item in Model.BillItemViewModels)
                                                {
                                                    var itemAmount = item.Quantity * item.UnitPrice;
                                                    <tr>
                                                        <td class="col-md-1">@(index++)</td>
                                                        <td class="text-left col-md-5">@item.ProductName</td>
                                                        <td class="col-md-2">@item.UnitPrice.ToString("N0")</td>
                                                        <td class="col-md-2">@item.Quantity.ToString("N0")</td>
                                                        <td class="col-md-2">@itemAmount.ToString("N0")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                            <tfoot>
                                                @{
                                                    var tempTotalAmount = Model.BillItemViewModels.Sum(x => x.Quantity * x.UnitPrice);
                                                    var discountAmount = Model.BillSummaryViewModel.TotalDiscountAmount;
                                                    var totalAmount = tempTotalAmount - discountAmount;
                                                    var prepaymentAmount = Model.BillSummaryViewModel.PrepaymentAmount;
                                                    var remainingAmount = totalAmount - prepaymentAmount;
                                                }
                                                <tr>
                                                    <td colspan="4" class="text-right">Tạm tính: </td>
                                                    <td>@tempTotalAmount.ToString("N0")</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4" class="text-right">Giảm giá: </td>
                                                    <td>@discountAmount.ToString("N0")</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4" class="text-right text-danger">Thành tiền (@Model.BillItemViewModels.Count()): </td>
                                                    <td>@totalAmount.ToString("N0")</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4" class="text-right">Thanh toán: </td>
                                                    <td>@prepaymentAmount.ToString("N0")</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4" class="text-right">Còn lại: </td>
                                                    <td>@remainingAmount.ToString("N0")</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="5" class="text-left">Ghi chú: @Model.BillSummaryViewModel.Description</td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a asp-controller="Bill" asp-action="Index">
                        <input type="button" name="previous" class="previous btn btn-outline-dark" value="Quay lại" />
                    </a>
                    <button type="submit" class="next btn btn-success">Hoàn tất</button>
                </form>
            </fieldset>
        </div>
    </div>
</div>
}