@using DentalManagement.Data.Enums;
@using DentalManagement.ViewModels.Catalog.Customers;
@model CustomerCreateRequest

@{
    ViewData["Title"] = "Thêm mới khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        @*begin of content*@
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Thêm mới khách hàng</h1>
        </div>
        <form class="user" asp-action="Create" asp-controller="Customer" method="post">
            <div class="form-group row">
                <div class="col-sm-3 mb-3 mb-sm-0">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger d-block"></span>

                    <label asp-for="Gender" class="control-label"></label>
                    <select class="form-control" asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                        <option value="">-- Chọn giới tính --</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger d-block"></span>

                    <label asp-for="BirthDay" class="control-label"></label>
                    <input asp-for="BirthDay" class="form-control" type="date" />
                    <span asp-validation-for="BirthDay" class="text-danger d-block"></span>

                </div>
                <div class="col-sm-3 mb-3 mb-sm-0">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger d-block"></span>

                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger d-block"></span>

                    <label asp-for="IdentifyCard" class="control-label"></label>
                    <input asp-for="IdentifyCard" class="form-control" />
                    <span asp-validation-for="IdentifyCard" class="text-danger d-block"></span>

                </div>
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger d-block"></span>

                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" style="min-height: 108px;"></textarea>
                    <span asp-validation-for="Description" class="text-danger d-block"></span>

                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-sm-3">
                    @Html.ActionLink("Quay về", "Index", "Customer", "", new { @class = "btn btn-outline-dark" })
                    <button type="submit" class="btn btn-primary">Hoàn tất</button>
                </div>
            </div>
        </form>
        @*end of content*@
    </div>
</div>