@using DentalManagement.ViewModels.Common
@model PagedResult<DentalManagement.ViewModels.Catalog.Invoices.InvoiceViewModel>

@{
    ViewData["Title"] = "Danh sách hoá đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Danh sách hoá đơn</h1>
    <div>
        <a type="button" class="btn btn-outline-primary" asp-action="Create" asp-controller="Invoice">
            <i class="fa fa-user-plus"></i>
            Tạo mới
        </a>
        <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" asp-action="Index" asp-controller="Invoice" method="get">
            <div class="input-group">
                <input type="date" class="form-control border-1 small" value="@ViewBag.InvoiceDate" name="keyword"
                       aria-label="Search" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <hr />

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-sm" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                Số hoá đơn
                            </th>
                            <th>
                                Ngày tạo
                            </th>
                            <th>
                                % giảm giá
                            </th>
                            <th>
                                Số tiền giảm giá
                            </th>
                            <th>
                                Thành tiền
                            </th>
                            <th>
                                Khách hàng
                            </th>
                            <th>
                                Ghi chú
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalDiscountPercent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalDiscountAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalInvoiceAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.ActionLink(" Sửa", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Xem", "Details", new { id = item.Id }) |
                                    @Html.ActionLink(" Xóa", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>