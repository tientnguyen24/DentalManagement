@model BillViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Invoice">Hoá đơn</a></li>
        <li class="breadcrumb-item active">Tạo mới</li>
    </ol>
    <h1 class="h3 mb-2 text-gray-800">Xác nhận hoá đơn</h1>
    <hr />
    <div class="col-md-12 mx-0">
        <div class="user" id="msform">
            <fieldset>
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <h1 class="h4 text-gray-900 mb-4">Thông tin khách hàng</h1>
                            <div class="form-group row">
                                @*<label>@Model.CustomerViewModel.FullName</label>*@
                            </div>
                            </div>
                            <div class="card shadow mb-4">
                                <h1 class="h4 text-gray-900 mb-4">Thông tin hoá đơn</h1>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-sm" width="100%" cellspacing="0">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th></th>
                                                    <th>
                                                        STT
                                                    </th>
                                                    <th>
                                                        Tên dịch vụ
                                                    </th>
                                                    <th>
                                                        Đơn giá
                                                    </th>
                                                    <th>
                                                        Số lượng
                                                    </th>
                                                    <th>
                                                        Thành tiền
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach(var item in Model.BillItemViewModels)
                                                {
                                                    <tr>
                                                        <td></td>
                                                        <td>@item.ProductName</td>
                                                        <td>@item.UnitPrice</td>
                                                        <td>@item.Quantity</td>
                                                        <td>@(item.Quantity*item.UnitPrice)</td>
                                                    </tr>
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td colspan="5" class="text-right">Tạm tính: </td>
                                                    <td>@Model.BillItemViewModels.Sum(x=>x.Quantity*x.UnitPrice).ToString("N0")</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="5" class="text-right">Giảm giá: </td>
                                                    <td>--:--</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="5" class="text-right text-danger">Thành tiền (<span id="lbl_no_of_items"></span>): </td>
                                                    <td>@Model.BillItemViewModels.Sum(x => x.Quantity * x.UnitPrice).ToString("N0")</td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>